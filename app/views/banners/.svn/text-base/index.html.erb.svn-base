<h1>Listing banners</h1>

<table>
  <tr>
	<th>imagen</th>
    <th>Titulo</th>
    <th>Descripcion</th>
  </tr>

<% @banners.each do |banner| %>
  <tr>
	<td><%= link_to (image_tag banner.imagen.url(:thumb)), banner %></td>
    <td><%=h banner.titulo %></td>
    <td><%=h banner.descripcion %></td>
    <td><%= link_to 'Show', banner %></td>
    <td><%= link_to 'Edit', edit_banner_path(banner) %></td>
    <td><%= link_to 'Destroy', banner, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New banner', new_banner_path %>