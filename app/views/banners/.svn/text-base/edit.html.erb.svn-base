<h1>Editing banner</h1>

<% form_for @banner, :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>

	<p>imagen:<%= f.file_field :imagen %></p>
  <p>
    <%= f.label :titulo %><br />
    <%= f.text_field :titulo %>
  </p>
  <p>
    <%= f.label :descripcion %><br />
    <%= f.text_area :descripcion %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @banner %> |
<%= link_to 'Back', banners_path %>