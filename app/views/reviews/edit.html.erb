<h1>Editing review</h1>

<% form_for @review, :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>
 <p>
    <%= f.label :titulo %><br />
    <%= f.text_field :titulo %>
  </p>
  <p>
    <%= f.label :subdescripcion %><br />
    <%= f.text_area :subdescripcion %>
  </p>
 <p>
    <%= f.label :reviewp1 %><br />
    <%= f.text_area :reviewp1 %>
  </p>
 <p>imagen:<%= f.file_field :img_review1 %></p>
  <p>
    <%= f.label :reviewp2 %><br />
    <%= f.text_area :reviewp2 %>
  </p>
 <p>imagen:<%= f.file_field :img_review2 %></p>
  <p>
    <%= f.label :reviewp3 %><br />
    <%= f.text_area :reviewp3 %>
  </p>
  <p>
    <%= f.label :autor %><br />
    <%= f.text_area :autor %>
  </p>
  <p>
    <%= f.label :nombre_juego %><br />
    <%= f.collection_select :game_id, Game.all, :id, :nombre_juego%>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @review %> |
<%= link_to 'Back', reviews_path %>