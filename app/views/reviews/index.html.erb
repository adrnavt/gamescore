<div id="columna_reviews">
	<div id="title_reviews">RESEÑAS MÁS RECIENTES</div>
	<div id="search_reviews"><% form_for @search do |f| %>
    
<%= f.text_field :titulo_or_subdescripcion_like, :placeholder => "Busqueda" %>

<%= f.submit "Buscar"%>

<% end %></div>
	<% @reviews.each do |review| %>
	<div id="contenedor_list_review">
		<div id="imagen_review">
			<%@imagen = Game.find_by_id(review.game_id)%>
  	        <%= link_to (image_tag @imagen.imagen_juego.url(:thumb)), @imagen %>
		</div>
		<div id="info_review">
				<div class="tituloreview"><%=h review.titulo %></div>
				<div class="postedreview">Posted on: <%=h review.created_at%></div><br />
    			<div class="descripcionreview"><%=h review.subdescripcion %></div>
    			<div class="linkreadmore"><%= link_to 'Read full review...', review %></div>
			<% if admin? %> <%= link_to 'Edit', edit_review_path(review) %>
			    <%= link_to 'Destroy', review, :confirm => 'Are you sure?', :method => :delete %>
			    <% end %>
		</div>
	</div>
	<div id="separadorreviews"></div>
	<% end %>
		<div class="gamescore_pagination">
  <%= will_paginate @reviews, :container => true, :prev_label => "<< Prev", :next_label => "Next >>" %>
  </div>
</div>
<div id="columna_ads">
	<div id="popular_reviews">
		<div id="titulo">Reseñas Nuevas</div>
    <%@reviewpopulares = Review.find(:all, :limit=> 4, :order=>"created_at DESC")%>
    <%@reviewpopulares.each do |reviewpopular|%>
    <div class="contenedor_der_latest">
      <div id="img_noticia"> 
          <%= link_to (image_tag reviewpopular.img_review1.url(:thumb)),  reviewpopular  %>
      </div>
        <div id="der_latest_titulo" class="textotitulos">
          <%= reviewpopular.titulo%>
        </div>
      <div id="descripcion_not_der" class="textonormal"> 
        <%= reviewpopular.subdescripcion%> 
      </div>
  </div>
    <%end%>
    
  </div>	
  <div id="swf267"><%=link_to (image_tag "gears.jpg", :alt=>"gameplanet.com"), "http://www.gameplanet.com", :target=>"_blank" %></div>
</div>
<div class="clear"></div>


		



 
  	 
  



