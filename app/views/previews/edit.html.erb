<h1>Editing preview</h1>

<% form_for @preview, :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :titulo %><br />
    <%= f.text_field :titulo %>
  </p>
  <p>
    <%= f.label :subdescripcion %><br />
    <%= f.text_area :subdescripcion %>
  </p>
  <p>
    <%= f.label :previewp1 %><br />
    <%= f.text_area :previewp1 %>
  </p>
  <p>imagen:<%= f.file_field :img_preview %></p>
  <p>
    <%= f.label :previewp2 %><br />
    <%= f.text_area :previewp2 %>
  </p>
  <p>imagen:<%= f.file_field :img_preview2 %></p>
  <p>
    <%= f.label :previewp3 %><br />
    <%= f.text_area :previewp3 %>
  </p>
  <p>
    <%= f.label :autor %><br />
    <%= f.text_field :autor %>
  </p>
   <p>
    <%= f.label :nombre_juego %><br />
    <%= f.collection_select :game_id, Game.all, :id, :nombre_juego%>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @preview %> |
<%= link_to 'Back', previews_path %>