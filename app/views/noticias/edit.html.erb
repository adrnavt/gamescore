<h1>Editing noticia</h1>

<% form_for @noticia, :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :titulo %><br />
    <%= f.text_field :titulo %>
  </p>
  <p>imagen:<%= f.file_field :img_noticia %></p>
  <p>
    <%= f.label :descripcion_img %><br />
    <%= f.text_field :descripcion_img %>
  </p>
  <p>
    <%= f.label :autor %><br />
    <%= f.text_field :autor %>
  </p>
  <p>
    <%= f.label :lugar %><br />
    <%= f.text_field :lugar %>
  </p>
  <p>
    <%= f.label :nota %><br />
    <%= f.text_area :nota %>
  </p>
  <p>
    <%= f.label :publisher %><br />
    <%= f.text_field :publisher %>
  </p>
  <p>
    <%= f.label :consola_id %><br />
    <%= f.text_field :consola_id %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

